{
    "Cosmos DB Snippets": {
      "select": {
        "prefix": "select",
        "body": [
          "select",
          "  ${1:*}", 
          "from c", 
          "where", 
          "  c.${2}"],
        "description": "Cosmos DB Select Query"
      },
      "exists": {
          "prefix": "exists",
          "body": [
              "exists",
              "(", 
              "  select value x",
              "  from x in c.${1: }",
              "  where", 
              "    x.${2}",
              ")"
          ],
          "description": "Cosmos DB exists expression with sub-query"
      },
      "join": {
          "prefix": "join",
          "body": [
              "join",
              "  d in in c.${1: }"
          ],
          "description": "Cosmos DB join statement"
      },
      "offset": {
          "prefix": "offset",
          "body": [
              "offset ${1: } limit ${2: }"
          ],
          "description": "Cosmos DB offset limit clause"
      }
    }
