      "exists": {
          "prefix": "exists",
          "body": [
              "exists",
              "(", 
              "  select value x",
              "  from x in c.${1: }",
              "  where", 
              "    x.${2}",
              ")"
          ],
          "description": "CosmosDB sub-query with exists expression"
      }
    }
